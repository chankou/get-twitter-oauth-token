require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "oauthor"
    gem.summary = %Q{The "oauthor" is a command to get OAuth token.}
    gem.description = %Q{The "oauthor" is a command to get OAuth token. Let's get OAuth token!}
    gem.email = "jugyo.org@gmail.com"
    gem.homepage = "http://github.com/jugyo/oauthor"
    gem.authors = ["jugyo"]
    gem.add_dependency "oauth", ">= 0"
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end
